<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="StartMaui.Modules.Login.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StartMaui.Modules.Login"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="White">
    
	<ContentPage.Content>
		<StackLayout VerticalOptions="CenterAndExpand">

            <Entry Placeholder="Login" Text="{Binding LoginRequest.Login}"/>
            <Entry Placeholder="Password" Text="{Binding LoginRequest.Password}"/>
            <Button Margin="0,20" Text="Login" Command="{Binding LoginCommand}"/>

        </StackLayout>
	</ContentPage.Content>
</ContentPage>